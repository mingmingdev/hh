<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="#fff">
    <FrameLayout
        android:id="@+id/videoBackGround"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#000"
        >
        <VideoView
            android:id="@+id/videoList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            />
        <ImageView
            android:id="@+id/videoImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/videoPlayFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/btn_video_play"
            android:alpha="0.8"/>
        <TextView
            android:id="@+id/videoPlayLong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="#000"
            android:alpha="0.6"
            android:textColor="#fff"
            android:text="测试"/>
    </FrameLayout>
    <TextView
        android:id="@+id/videoText"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:textColor="#000"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id="@+id/videoPlayTime"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:text="播放"
            android:layout_toRightOf="@id/videoPlayTime"
            android:layout_centerVertical="true"
            />




        <ImageView
            android:id="@+id/videoShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_video_share"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/videoJudgeCount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:paddingRight="10dp"
            android:layout_toLeftOf="@id/videoShare"
            android:layout_centerVertical="true"
            />
        <ImageView
        android:id="@+id/videoJudgeImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_video_reply_nor"
        android:paddingRight="10dp"
        android:layout_toLeftOf="@id/videoJudgeCount"
        android:layout_centerVertical="true"
        />

        <TextView
            android:id="@+id/videoLikeCount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:paddingRight="10dp"
            android:layout_toLeftOf="@id/videoJudgeImg"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/videoLikeImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_video_like_nor"
            android:paddingRight="10dp"
            android:layout_toLeftOf="@id/videoLikeCount"
            android:layout_centerVertical="true"

            />
    </RelativeLayout>
</LinearLayout>
